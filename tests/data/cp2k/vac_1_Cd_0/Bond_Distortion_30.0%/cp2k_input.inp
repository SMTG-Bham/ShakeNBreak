&GLOBAL
	PROJECT relax
	RUN_TYPE GEO_OPT
	IOLEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
	METHOD Quickstep
	&DFT
		BASIS_SET_FILE_NAME HFX_BASIS
		POTENTIAL_FILE_NAME GTH_POTENTIALS
		CHARGE 0
		SPIN_POLARIZED .TRUE.
		&MGRID
			CUTOFF [eV] 500
		&END MGRID
		&QS
			METHOD GPW
			EPS_DEFAULT 1e-10
			EXTRAPOLATION ASPC
		&END QS
		&DFT
			&KPOINTS
				SCHEME GAMMA 1 1 1
			&END KPOINTS
		&END DFT
		&POISSON
			PERIODIC XYZ
		&END POISSON
		&PRINT
			&E_DENSITY_CUBE OFF
			&END E_DENSITY_CUBE
		&END PRINT
		&SCF
			SCF_GUESS RESTART
			MAX_SCF 80
			EPS_SCF 1e-06
			&OT
				PRECONDITIONER FULL_SINGLE_INVERSE
				MINIMIZER DIIS
			&END OT
			&OUTER_SCF ! repeat the inner SCF cycle 10 times
				MAX_SCF 10
				EPS_SCF 1e-06
			&END OUTER_SCF
			&PRINT
				&RESTART
				&END RESTART
			&END PRINT
		&END SCF
		&XC
			&XC_FUNCTIONAL
				&PBE
					SCALE_X 0.75
					SCALE_C 1.0
				&END PBE
			&END XC_FUNCTIONAL
			&HF
				FRACTION 0.25
				&SCREENING
					EPS_SCHWARZ 1e-06
					SCREEN_ON_INITIAL_P True
				&END SCREENING
				&INTERACTION_POTENTIAL
					POTENTIAL_TYPE TRUNCATED
					CUTOFF_RADIUS 6.0
					T_C_G_DATA ./t_c_g.dat
				&END INTERACTION_POTENTIAL
				&MEMORY
					MAX_MEMORY 4000
					EPS_STORAGE_SCALING 0.1
				&END MEMORY
			&END HF
		&END XC
	&END DFT
	&SUBSYS
		&CELL
			CELL_FILE_FORMAT CIF
			CELL_FILE_NAME structure.cif
		&END CELL
		&TOPOLOGY
			COORD_FILE_NAME structure.cif
			COORD_FILE_FORMAT CIF
		&END TOPOLOGY
	&END SUBSYS
&END FORCE_EVAL
